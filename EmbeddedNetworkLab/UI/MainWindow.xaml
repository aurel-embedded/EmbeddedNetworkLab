<Window x:Class="EmbeddedNetworkLab.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EmbeddedNetworkLab"
        mc:Ignorable="d"
        Title="Embedded Network Lab" Height="594" Width="873">
    <Grid>
        <Grid.RowDefinitions>
            <!-- Ligne principale -->
            <RowDefinition Height="*" />
            <!-- Console -->
            <RowDefinition Height="150" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <!-- Navigation -->
            <ColumnDefinition Width="220" />
            <!-- Workspace -->
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- NAVIGATION PANEL -->
        <Border Grid.Row="0" Grid.Column="0" Background="#F3F3F3" BorderBrush="#DDDDDD" BorderThickness="0,0,1,1">
            <StackPanel Margin="10">
                <TextBlock Text="Modules" FontWeight="Bold" Margin="0,0,0,10"/>

                <TextBlock Text="MQTT" FontWeight="SemiBold" Margin="0,5,0,5"/>
                <Button Content="Broker" Margin="0,0,0,5"/>
                <Button Content="Client" Margin="0,0,0,10"/>

                <TextBlock Text="Network Tests" FontWeight="SemiBold" Margin="0,5,0,5"/>
                <Button Content="Throughput Test" Margin="0,0,0,5"/>
            </StackPanel>
        </Border>

        <!-- WORKSPACE -->
        <Border Grid.Row="0" Grid.Column="1" Background="White">
            <TextBlock Text="Select a module"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Center"
                   FontSize="18"
                   Foreground="Gray"/>
        </Border>

        <!-- CONSOLE -->
        <Border Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2"
            Background="#1E1E1E">
            <TextBox 
            Foreground="LightGreen"
            Background="#1E1E1E"
            BorderThickness="0"
            FontFamily="Consolas"
            IsReadOnly="True"
            Text="Console initialized..."
            TextWrapping="Wrap"
            VerticalScrollBarVisibility="Auto"
            Padding="10"/>
        </Border>
    </Grid>
</Window>
