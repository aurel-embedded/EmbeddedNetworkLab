<UserControl x:Class="EmbeddedNetworkLab.UI.Modules.MqttBroker.MqttBrokerView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:EmbeddedNetworkLab.UI.Modules.MqttBroker"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- CONFIG -->
        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
            <TextBlock Text="Port:" VerticalAlignment="Center"/>
            <TextBox Width="80"
                 Margin="5,0"
                 Text="{Binding BrokerPort}"
                 IsEnabled="{Binding IsConfigurationEditable}"/>

            <TextBlock Text="Bind IP:" VerticalAlignment="Center" Margin="10,0,0,0"/>
            <ComboBox Width="150"
                  ItemsSource="{Binding NetworkInterfaces}"
                  SelectedItem="{Binding SelectedBindIp}"
                  IsEnabled="{Binding IsConfigurationEditable}"/>

            <TextBlock Text="User:" Margin="10,0,0,0"/>
            <TextBox Width="100"
                 Text="{Binding BrokerUsername}"/>

            <TextBlock Text="Pass:" Margin="10,0,0,0"/>
            <PasswordBox x:Name="PwdBox"
                     Width="100"/>
        </StackPanel>

        <!-- CONTROLS -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,10">
            <Button Content="Start"
                Command="{Binding StartCommand}"
                Width="100"/>
            <Button Content="Stop"
                Command="{Binding StopCommand}"
                Width="100"
                Margin="10,0,0,0"/>
            <TextBlock Text="{Binding BrokerStatus}"
                   Margin="20,0,0,0"
                   VerticalAlignment="Center"/>
        </StackPanel>

        <!-- EVENTS -->
        <GroupBox Grid.Row="2" Header="Events" Margin="0,0,0,10">
            <ListBox ItemsSource="{Binding BrokerEventsView}" Height="120">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="{Binding Timestamp, StringFormat=HH:mm:ss}"
                           Width="70"/>
                            <TextBlock Text="{Binding Level}"
                           Width="60"
                           Margin="5,0"/>
                            <TextBlock Text="{Binding Message}" />
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </GroupBox>

        <!-- MESSAGES -->
        <GroupBox Grid.Row="3" Header="Messages">
            <ListBox ItemsSource="{Binding BrokerMessages}"/>
        </GroupBox>
    </Grid>
</UserControl>
