<UserControl x:Class="EmbeddedNetworkLab.UI.Modules.MqttBroker.MqttBrokerView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:EmbeddedNetworkLab.UI.Modules.MqttBroker"
             xmlns:core="clr-namespace:EmbeddedNetworkLab.Core.Logging"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <UserControl.Resources>

        <!-- TEMPLATE SYSTEM -->
        <DataTemplate x:Key="SystemEventTemplate">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="{Binding Timestamp, StringFormat=HH:mm:ss}"
                       Width="80"/>
                <TextBlock Text="{Binding Level}"
                       Width="70"
                       Margin="5,0"/>
                <TextBlock Text="{Binding Message}" />
            </StackPanel>
        </DataTemplate>

        <!-- TEMPLATE MESSAGE -->
        <DataTemplate x:Key="MessageEventTemplate">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="{Binding Timestamp, StringFormat=HH:mm:ss}"
                       Width="80"/>
                <TextBlock Text="{Binding Message}" />
            </StackPanel>
        </DataTemplate>

        <!-- SELECTOR -->
        <local:BrokerEventTemplateSelector
        x:Key="BrokerEventSelector"
        SystemTemplate="{StaticResource SystemEventTemplate}"
        MessageTemplate="{StaticResource MessageEventTemplate}" />

    </UserControl.Resources>


    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- CONFIG -->
        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
            <TextBlock Text="Port:" VerticalAlignment="Center"/>
            <TextBox Width="80"
                 Margin="5,0"
                 Text="{Binding BrokerPort}"
                 IsEnabled="{Binding IsConfigurationEditable}"/>

            <TextBlock Text="Bind IP:" VerticalAlignment="Center" Margin="10,0,0,0"/>
            <ComboBox Width="150"
                  ItemsSource="{Binding NetworkInterfaces}"
                  SelectedItem="{Binding SelectedBindIp}"
                  IsEnabled="{Binding IsConfigurationEditable}"/>

            <TextBlock Text="User:" Margin="10,0,0,0"/>
            <TextBox Width="100"
                 Text="{Binding BrokerUsername}"/>

            <TextBlock Text="Pass:" Margin="10,0,0,0"/>
            <PasswordBox x:Name="PwdBox"
                     Width="100"/>
        </StackPanel>

        <!-- CONTROLS -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,10">
            <Button Content="Start"
                Command="{Binding StartCommand}"
                Width="100"/>
            <Button Content="Stop"
                Command="{Binding StopCommand}"
                Width="100"
                Margin="10,0,0,0"/>
            <TextBlock Text="{Binding BrokerStatus}"
                   Margin="20,0,0,0"
                   VerticalAlignment="Center"/>
        </StackPanel>

        <!-- EVENTS -->
        <GroupBox Grid.Row="2" Header="System" Margin="0,0,0,10">
            <ListBox ItemsSource="{Binding BrokerEventsView}"
                ItemTemplateSelector="{StaticResource BrokerEventSelector}"
                Height="120">
                <ListBox.ItemContainerStyle>
                    <Style TargetType="ListBoxItem">
                        <Setter Property="Foreground" Value="Black"/>

                        <Style.Triggers>

                            <DataTrigger Binding="{Binding Level}"
                         Value="{x:Static core:BrokerEventLevel.Info}">
                                <Setter Property="Foreground" Value="DodgerBlue"/>
                            </DataTrigger>

                            <DataTrigger Binding="{Binding Level}"
                         Value="{x:Static core:BrokerEventLevel.Warning}">
                                <Setter Property="Foreground" Value="DarkOrange"/>
                            </DataTrigger>

                            <DataTrigger Binding="{Binding Level}"
                         Value="{x:Static core:BrokerEventLevel.Error}">
                                <Setter Property="Foreground" Value="Red"/>
                            </DataTrigger>

                            <DataTrigger Binding="{Binding Level}"
                         Value="{x:Static core:BrokerEventLevel.Debug}">
                                <Setter Property="Foreground" Value="Gray"/>
                            </DataTrigger>

                        </Style.Triggers>
                    </Style>
                </ListBox.ItemContainerStyle>
            </ListBox>
        </GroupBox>

        <!-- MESSAGES -->
        <GroupBox Grid.Row="3" Header="Messages">
            <ListBox ItemsSource="{Binding BrokerMessagesView}"
                ItemTemplateSelector="{StaticResource BrokerEventSelector}"/>
        </GroupBox>
    </Grid>
</UserControl>
